echo "==> remember: please, edit the file:"
echo "/etc/lxdm/lxdm.conf"
echo ""
echo "==> Near on line 42, change:"
echo "## the theme of greeter"
echo "theme=Industrial (or other lxdm theme name that you have installed)"
